---
import "@/styles/globals.css"
import Layout from "@/layouts/Layout.astro"
import { ConnectWithGitButton } from "@/components/react/connect-git"
---

<Layout title="Welcome to Func Easy">
  <div class="w-full max-w-3xl mx-auto p-4">
    <h2 class="text-2xl font-bold text-center mb-6 text-foreground">
      Connect with your preferred Git provider
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <ConnectWithGitButton
        image="/github-logo.svg"
        client:load
        provider="github"
        name="GitHub"
      />
      <ConnectWithGitButton
        image="https://images.ctfassets.net/xz1dnu24egyd/3JZABhkTjUT76LCIclV7sH/17a92be9bce78c2adcc43e23aabb7ca1/gitlab-logo-500.svg"
        client:load
        provider="gitlab"
        name="GitLab"
      />
      <ConnectWithGitButton
        image="/bitbucket-logo.svg"
        client:load
        provider="bitbucket"
        name="Bitbucket"
      />
    </div>
    <p class="text-sm text-center mt-6 text-muted-foreground">
      By connecting, you agree to our <a
        href="#"
        class="text-primary hover:underline">Terms of Service</a
      > and <a href="#" class="text-primary hover:underline">Privacy Policy</a>.
    </p>
  </div>
</Layout>
